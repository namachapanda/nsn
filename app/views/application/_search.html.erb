<h4>商品検索</h4>
<dl>
  <%= form_tag( :items , { :method => :get, :class => 'form-horizontal' }) do %>
  	<dt>フリーワードで検索</dt>
	<dd><%= text_field_tag 'name', params[:freeword], { :class => 'input-medium search-query', :placeholder => "フリーワード入力" } %>
	</dd>
	<dt>カテゴリから検索</dt>
	<% all_categories.each do |category| %>
	<dd>
	  <label>
	  	<%= check_box_tag "category_id[]", category.id %>
		<%= category.name %>
      </label>
    </dd>
	<% end %>
	<dt>色から検索</dt>
	<% all_colors.each do |color| %>
	<dd>
	  <label>
	  	<%= check_box_tag "color_id[]", color.id %>
		<%= color.name %>
      </label>
    </dd>
	<% end %>
	<dt>値段から検索</dt>
	<dd>
	  <%= text_field_tag "low_price" , '', { :class => 'span4' } %>
	  円〜
	  <%= text_field_tag "high_price" , '', { :class => 'span4' }%>
	  円
	</dd>
	<dd><%= submit_tag '検索' , { :class => 'btn' } %></dd>
  <% end %>
</dl>

