<h1>インフォメーション</h1>

<table>
  <tr>
    <th>インフォメーション情報</th>
    <th>更新日</th>
    <th></th>
    <th></th>
  </tr>

<% @information.each do |information| %>
  <tr>
    <td><%= information.info %></td>
    <td><%= information.renew %></td>
    <td><%= link_to '編集', edit_information_path(information) %></td>
    <td><%= link_to '削除', information, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
  </tr>
<% end %>
</table>

