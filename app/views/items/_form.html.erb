  </div>
  <div class="field">
    <%= f.label :color_id %><br />
    <%= f.number_field :color_id%>
  </div>
  <div class="field">
    <%= f.label :img %><br />
    <%= f.text_field :img %>
  </div>
  <div class="field">
    <%= f.label :explain %><br />
    <%= f.text_area :explain %>
  </div>
