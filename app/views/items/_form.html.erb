    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br />
    <%= f.collection_select(:category_id, @category_all, :id, :name ,{ :include_blank => '選択してください'}) %>
  </div>
  <div class="field">
    <%= f.label :color_id %><br />
